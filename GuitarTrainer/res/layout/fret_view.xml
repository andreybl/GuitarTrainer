<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gtrainer="http://schemas.android.com/apk/res/com.ago.guitartrainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_sideout_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">" />

    <!-- I user "class" here to be able to use inner class for a view -->
    <view xmlns:android="http://schemas.android.com/apk/res/android"
        class="com.ago.guitartrainer.ui.FretView$FretImageView"
        android:id="@+id/img_fretimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:src="@drawable/guitar_12_frets_50percent" />

</LinearLayout>