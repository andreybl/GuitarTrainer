<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txt_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale Grids"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_for_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1" >

        <Button
            android:id="@+id/gridshape_alpha"
            style="@style/Button_InViews"
            android:text="α" />

        <Button
            android:id="@+id/gridshape_beta"
            style="@style/Button_InViews"
            android:text="β" />

        <Button
            android:id="@+id/gridshape_gamma"
            style="@style/Button_InViews"
            android:text="γ" />

        <Button
            android:id="@+id/gridshape_delta"
            style="@style/Button_InViews"
            android:text="δ" />

        <Button
            android:id="@+id/gridshape_epsilon"
            style="@style/Button_InViews"
            android:text="ε" />
    </GridLayout>

    <CheckBox
        android:id="@+id/cb_random_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="random" />

    <CheckBox
        android:id="@+id/cb_root_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="root only" />

</LinearLayout>