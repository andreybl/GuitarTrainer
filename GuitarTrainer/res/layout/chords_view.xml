<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txt_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chord Forms"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_for_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2" >

        <Button
            android:id="@+id/chord_maj"
            android:text="maj" />

        <Button
            android:id="@+id/chord_min"
            android:text="min" />

        <Button
            android:id="@+id/chord_dim"
            android:text="dim" />

        <Button
            android:id="@+id/chord_aug"
            android:text="aug" />

        <Button
            android:id="@+id/chord_maj7"
            android:text="M7" />

        <Button
            android:id="@+id/chord_min7"
            android:text="m7" />

        <Button
            android:id="@+id/chord_domsept7"
            android:text="7" />

        <Button
            android:id="@+id/chord_dim7"
            android:text="dim7" />
    </GridLayout>

    <CheckBox
        android:id="@+id/cb_random_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="random" />

</LinearLayout>