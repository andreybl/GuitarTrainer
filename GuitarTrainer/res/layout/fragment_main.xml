<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gtrainer="http://schemas.android.com/apk/res/com.ago.guitartrainer"
    android:id="@+id/layout_main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.ago.guitartrainer.ui.FretView
        android:id="@+id/view_fretview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ago.guitartrainer.ui.ScalegridsView
            android:id="@+id/view_scalegridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ago.guitartrainer.ui.DegreesView
            android:id="@+id/view_degreesview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ago.guitartrainer.ui.NotesView
            android:id="@+id/view_notesview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ago.guitartrainer.ui.LearningStatusView
            android:id="@+id/learning_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>