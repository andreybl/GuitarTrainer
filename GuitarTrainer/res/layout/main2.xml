<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gtrainer="http://schemas.android.com/apk/res/com.ago.guitartrainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.ago.guitartrainer.ui.FretImageView
        android:id="@+id/img_fretimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/guitar_12_frets" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ago.guitartrainer.ui.ShapesView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ago.guitartrainer.ui.DegreesView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        

        <com.ago.guitartrainer.ui.NotesView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>