<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txt_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keys"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_for_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2" >

        <Button
            android:id="@+id/key_c"
            style="@style/Button_InViews"
            android:text="C" />

        <Button
            android:id="@+id/key_c_di"
            style="@style/Button_InViews"
            android:text="C#" />

        <Button
            android:id="@+id/key_d"
            style="@style/Button_InViews"
            android:text="D" />

        <Button
            android:id="@+id/key_d_di"
            style="@style/Button_InViews"
            android:text="D#" />

        <Button
            android:id="@+id/key_e"
            style="@style/Button_InViews"
            android:text="E" />

        <Button
            android:id="@+id/key_f"
            style="@style/Button_InViews"
            android:text="F" />

        <Button
            android:id="@+id/key_g"
            style="@style/Button_InViews"
            android:text="G" />

        <Button
            android:id="@+id/key_g_di"
            style="@style/Button_InViews"
            android:text="G#" />

        <Button
            android:id="@+id/key_a"
            style="@style/Button_InViews"
            android:text="A" />

        <Button
            android:id="@+id/key_a_di"
            style="@style/Button_InViews"
            android:text="A#" />

        <Button
            android:id="@+id/key_b"
            style="@style/Button_InViews"
            android:text="B" />
    </GridLayout>

    <CheckBox
        android:id="@+id/cb_random_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="random" />

</LinearLayout>