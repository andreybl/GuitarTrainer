<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="0dp"
        android:rowCount="7" >

        <ImageView
            android:id="@+id/note_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="7"
            android:src="@drawable/note_e2" />

        <Button
            android:id="@+id/key_c"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="C" />

        <Button
            android:id="@+id/key_d"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="D" />

        <Button
            android:id="@+id/key_e"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="E" />

        <Button
            android:id="@+id/key_f"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="F" />

        <Button
            android:id="@+id/key_g"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="G" />

        <Button
            android:id="@+id/key_a"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="A" />

        <Button
            android:id="@+id/key_b"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="B" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/octave_2"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="2" />

        <Button
            android:id="@+id/octave_3"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="3" />

        <Button
            android:id="@+id/octave_4"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="4" />

        <Button
            android:id="@+id/octave_5"
            style="@style/Button_InViews"
            android:layout_width="@dimen/buttonHeight"
            android:layout_height="@dimen/buttonWidth"
            android:text="5" />
    </LinearLayout>

</LinearLayout>